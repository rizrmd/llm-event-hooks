{
  "name": "llm-event-hooks",
  "version": "1.0.0",
  "description": "Production-ready TypeScript library for adding comprehensive event hooks and streaming capabilities to OpenAI LLM interactions",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./dist": "./dist"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "PERFORMANCE.md"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "tsx": "^4.6.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "zod": "^3.22.0",
    "@openai/agents": "^0.3.2"
  },
  "scripts": {
    "build": "bun run scripts/build-simple.ts",
    "build:full": "bun run scripts/build.ts",
    "build:watch": "bun tsc --watch",
    "dev": "bun --watch src/index.ts",
    "test": "bun test",
    "test:unit": "bun test tests/unit/",
    "test:integration": "bun test tests/integration/",
    "test:contract": "bun test tests/contract/",
    "test:performance": "bun run scripts/performance-test.ts",
    "test:coverage": "bun test --coverage",
    "lint": "bunx eslint src/ tests/ --ext .ts",
    "lint:fix": "bunx eslint src/ tests/ --ext .ts --fix",
    "format": "bunx prettier --write src/ tests/",
    "type-check": "bunx tsx --no-check ./src/index.ts",
    "prepublishOnly": "bun run build && bun run test",
    "preversion": "bun run test && bun run lint",
    "version": "bun run build && bun run test"
  },
  "keywords": [
    "openai",
    "llm",
    "agents",
    "hooks",
    "events",
    "typescript",
    "streaming",
    "chatgpt",
    "gpt",
    "ai",
    "middleware",
    "interceptor",
    "event-driven",
    "real-time"
  ],
  "author": {
    "name": "AI Base Team",
    "email": "contact@example.com",
    "url": "https://github.com/your-org/llm-event-hooks"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/llm-event-hooks.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/llm-event-hooks/issues"
  },
  "homepage": "https://github.com/your-org/llm-event-hooks#readme",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/your-org"
  }
}
